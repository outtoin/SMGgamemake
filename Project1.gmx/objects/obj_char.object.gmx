        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Initialize Variables
ini_open("save.ini");
original_hp = ini_read_real("status","hp",50);
hp = original_hp;

grav = 1;
hsp = 0;
vsp = 0;
jumpspeed = 22;
movespeed = 8;
jump = 0;
jump_max = 2;
mode = 0;
img_spd = 0.1;
atk_img_spd = 0.6;
//hp = 100;
xpos = 0;
ypos = 0;
atk = 10;
bomb = 3;
bomb_stack = 0;
time = 0;
kill = 0;

char_hit = 0;

is_dust = false;
is_air = false;
is_hit = false;

special_time = 0;

//automatic healing
healing_level = ini_read_real("status", "healing_level", 0);
healing_timer = 0;
healing_term = 600 - healing_level * 40;
healing_amount = round(3 + healing_level * 0.7);

//automatic shield
shield_level = ini_read_real("status", "shield_level", 0);
shield_term_timer = 0;
shield_term = 1000 - shield_level * 20;
shield_timer = 0;
shield_time = 60 + 6 * shield_level;

//special_attack
special_term = 30;
special_timer = 0;
special_ready = false;
is_cast = false;

timer_on = true;
//special - sword/thunder
sword_thunder_level = ini_read_real("status", "sword_thunder_level", 0);
sword_thunder_effect_time = (60 * sword_thunder_level * 0.5) + (60 * 6.5)
sword_thunder_effect_amount = sword_thunder_level * 0.25 + 1.5;

//special - sword/ice
sword_ice_level = ini_read_real("status", "sword_ice_level", 0);
sword_ice_effect_time = (60 * sword_ice_level * 0.3) + (60 * 3.7);

//special - sword/fire
sword_fire_level = ini_read_real("status", "sword_fire_level", 0);
sword_fire_effect_time = (60 * sword_fire_level * 0.2) + (60 * 0.9);


//special settings
is_special = (sword_thunder_level &gt; 0) || (sword_ice_level &gt; 0) || (sword_fire_level &gt; 0);

ini_close();
</string>
          </argument>
        </arguments>
      </action>
